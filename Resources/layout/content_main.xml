<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/tab1"
             android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
        android:text="OrganisationData"/>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/tab2"
            
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
        android:text="EmployeeData"/>
    </LinearLayout>
        
    <TextView
        android:layout_width="match_parent"
        android:textColor="@android:color/black"
        android:layout_marginLeft="5dp"
        style="@style/Base.ThemeOverlay.AppCompat.Light"
        android:text="Please click on Buttons to switch or fetch data from excel different tabs"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="1000dp"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/orgView"
        android:layout_height="wrap_content"
         />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="1000dp"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/empView"
        android:layout_height="wrap_content"
         />

</LinearLayout>
